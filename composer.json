{
  "name": "leadtech/boot",
  "description": "Minimalistic implementation of the symfony service container to provide advanced and IoC capabilities to light weight applications.",
  "minimum-stability": "stable",
  "license": "proprietary",
  "authors": [
    {
      "name": "Daan Biesterbos",
      "email": "daan@leadtech.nl"
    }
  ],
  "require": {
    "php": ">=5.5.0",
    "symfony/console": "^2.8",
    "symfony/dependency-injection": "^2.8",
    "symfony/filesystem": "^2.8",
    "symfony/config": "^2.8",
    "symfony/finder": "^2.8",
    "symfony/class-loader": "^2.8",
    "symfony/expression-language": "^2.8",
    "symfony/event-dispatcher": "^2.8",
    "monolog/monolog": "^1.15",
    "symfony/http-foundation": "^2.8",
    "symfony/routing": "^2.8",
    "intervention/httpauth": "^2.0",
    "devster/ubench": "^1.2"
  },
  "require-dev": {
    "phpunit/phpunit": "^4.8",
    "friendsofphp/php-cs-fixer": "^1.8",
    "phpmd/phpmd": "^2.2",
    "mikey179/vfsStream": "^1.5",
    "codeclimate/php-test-reporter": "^0.3.2"
  },
  "autoload": {
    "psr-4": {
      "Boot\\": "src/Leadtech/Boot/"
    },
    "files": [
      "resources/php7-polyfill.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Boot\\Tests\\": "tests/"
    }
  },
  "suggest": {
    "leadtech/boot-rabbit-mq": "Provides a clean and flexible solution to get you up and running with RabbitMQ very quickly."
  }
}
