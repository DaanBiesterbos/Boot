{
  "name": "leadtech/boot-framework",
  "description": "Minimalistic implementation of the symfony service container to provide advanced and IoC capabilities to light weight applications.",
  "minimum-stability": "stable",
  "license": "MIT",
  "authors": [
    {
      "name": "Daan Biesterbos",
      "email": "d.biesterbos@leadtech.nl"
    }
  ],
  "require": {
    "php": ">=7.1",
    "symfony/console": "^3.3",
    "symfony/dependency-injection": "^3.3",
    "symfony/filesystem": "^3.3",
    "symfony/config": "^3.3",
    "symfony/finder": "^3.3",
    "symfony/class-loader": "^3.3",
    "symfony/expression-language": "^3.3",
    "symfony/event-dispatcher": "^3.3",
    "monolog/monolog": "^1.15",
    "symfony/http-foundation": "^3.3",
    "symfony/routing": "^3.3"
  },
  "require-dev": {
    "phpunit/phpunit": "~6",
    "friendsofphp/php-cs-fixer": "^2.5",
    "phpmd/phpmd": "^2.2",
    "mikey179/vfsStream": "^1.5",
    "codeclimate/php-test-reporter": "^0.4.4",
    "devster/ubench": "^1.2"
  },
  "autoload": {
    "psr-4": {
      "Boot\\": "src/Leadtech/Boot/"
    },
    "files": [
      "resources/php7-polyfill.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Boot\\Tests\\": "tests/"
    }
  },
  "suggest": {
    "leadtech/boot-rabbit-mq": "Provides a clean and flexible solution to get you up and running with RabbitMQ very quickly."
  }
}
